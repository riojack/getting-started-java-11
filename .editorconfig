# EditorConfig is awesome: https://EditorConfig.org
# EditorConfig helps established a few fundamental standards
# around things line endings, tabbings, and trailing spaces.
root = true

[*]
end_of_line = lf
charset = utf-8

[*.java]
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,yaml,yml,xml,gradle,gitignore}]
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
